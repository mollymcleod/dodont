{{!< ../layouts/default}}

<div class="jumbotron">
      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <p>I'm a <span id="relationship">close friend/family</span> of someone <span id="group">living with PTSD.</span></p>
            <p><a class="btn btn-primary btn-lg" role="button" id="get-more">Get do's and don'ts</a></p>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-3">
          <h3 class="footer-heads">Featured Tips</h3>
          <div id="tips">
            <h4>If someone you know has cancer:</h4>
            <ul id="tip-list">
              <li class="do"><strong>Do</strong> offer to listen. <p class="example">Example: "If you would like to talk about it, I am here."</p>
              <li class="dont"><strong>Don't</strong> focus on appearances. <p class="example">Example: "Wow, you're losing a lot of weight!"</p>
            </ul>
          </div>
          <p><a class="btn btn-primary" href="featured_tips.html" role="button" id="view-more">View more tips</a></p>
        </div>
        <div class="col-md-3">
          <h3 class="footer-heads">Browse Topics</h3>
          <ul id="browse-topics-footer">
            {{#each groups}}
                <li><a href="/{{urlName}}">{{name}}</a></li>
              {{/each}}
          </ul>
        </div>
        <div class="col-md-3">
          <h3 class="footer-heads">Submit Tips</h3>
          <br><br><br><br><br><br><br><br>
          <p><a class="btn btn-primary" href="/new" role="button" id="submit-topic">Submit topics</a></p>
        </div>
      </div>
    </div>